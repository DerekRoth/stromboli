{
  "name": "stromboli",
  "version": "0.18.0",
  "description": "Simple and efficient component builder",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run clean",
    "pretest": "npm run build",
    "prepack": "npm run build -- --sourceMap false && mv build/* .",
    "postpack": "rimraf lib index.*",
    "start": "node index.js",
    "build": "tsc --project .",
    "test": "npm run fastest",
    "fastest": "tape 'test/**/test.js' | tap-mocha-reporter spec",
    "cover": "nyc npm t",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "author": "Eric MORAND <eric.morand@gmail.com>",
  "dependencies": {
    "@types/node": "^10.5.8"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ericmorand/stromboli"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "coveralls": "^3.0.2",
    "fs-extra": "^7.0.0",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "sinon": "^6.1.5",
    "tap": "^11.1.5",
    "tap-mocha-reporter": "^3.0.7",
    "tape": "^4.9.1",
    "typescript": "^3.0.1"
  }
}
